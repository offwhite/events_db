.title-bar
  .title
    %h1
      = link_to "CrewDb", root_path
    %h2
      Music, theatre, festivals and events artists and crew
  .search-form
    = simple_form_for(:search, url: search_global_path, method: :post) do |f|
      = f.input :query, as: :string, label: false, input_html: {value: @query_str}, placeholder: 'Search events, tours or venues'
      = f.submit 'Go', label: false, class: 'button green-btn'
  .sub-menu
    %ul
      - if current_user.nil?
        %li
          = link_to "Sign in", new_user_session_path
      - else
        %li
          = link_to "Sign out", destroy_user_session_path, method: :delete
        %li
          = link_to "Add event", new_event_path
        %li
          = link_to "Add tour", new_tour_path
      - if current_user&.admin?
        %li
          = link_to "Admin", admin_index_path
